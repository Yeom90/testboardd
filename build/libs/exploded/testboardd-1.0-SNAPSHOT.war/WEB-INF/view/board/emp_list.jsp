<span class="btn_findnew fr">			                    <button id="searchBtn" type="button" class="btn_findnew fr">검색</button>			                </span>                            <input type="text" name="keyword" id="keywordInput" value="${srcCriteria.keyword}" class="form-control_22 w12 fr" placeholder=""/>                            <div class="fr w115 mgr4">                                <select name="sdSearchType" id="sdSearchType" class="form-control kt-selectpicker">                                    <option value="all" <c:out value="${srcCriteria.sdSearchType eq 'all' ? 'seleceted' : ''}"/>>전체</option>                                    <option value="emp_name" <c:out value="${srcCriteria.sdSearchType eq 'emp_name' ? 'selected' : ''}"/>>사원명</option>                                    <option value="emp_id" <c:out value="${srcCriteria.sdSearchType eq 'emp_id' ? 'selected' : ''}"/>>사원아이디</option>                                    <option value="emp_interphone" <c:out value="${srcCriteria.sdSearchType eq 'emp_interphone' ? 'selected' : ''}"/>>내선번호</option>                                    <option value="emp_company" <c:out value="${srcCriteria.sdSearchType eq 'emp_company' ? 'selected' : ''}"/>>부서</option>                                    <option value="emp_athority" <c:out value="${srcCriteria.sdSearchType eq 'emp_athority' ? 'selected' : ''}"/>>권한</option>                                </select>                            </div>                            <div class="fr w115 mgr4">                                <select name="ftSearchType" id="ftSearchType" class="form-control kt-selectpicker">                                    <option value="" <c:out value="${srcCriteria.ftSearchType == null ? 'selected' : ''}"/>>재직상태</option>                                    <option value="재직" <c:out value="${srcCriteria.ftSearchType eq '재직' ? 'selected' : ''}"/>>재직</option>                                    <option value="퇴직" <c:out value="${srcCriteria.ftSearchType eq '퇴직' ? 'selected' : ''}"/>>퇴직</option>                                    <option value="휴직" <c:out value="${srcCriteria.ftSearchType eq '휴직' ? 'selected' : ''}"/>>휴직</option>                                </select>                            </div>                        </div>                    </div>                    <script>                        $('#ftSearchType').change(function () {                            // +"&ftSearchType=" + $('#ftSearchType select option:selected').val()                            // +"&sdSearchType=" + $('#sdSearchType select option:selected').val()                            console.log("첫번째 셀럭터 값: " + $('#ftSearchType option:selected').val());                            console.log("두번째 셀럭터 값: " + $('#sdSearchType option:selected').val());                        });                    </script>                    <!-- 검색박스 끝  search end -->                    <div class="kt-portlet__body">                        <div class="kt-section">                            <div class="kt-section__content">                                <!--  테이블 시작 -->                                <table class="table table-new1 table-hover">                                    <thead>                                    <tr>                                        <th>No</th>                                        <th>사원아이디</th>                                        <th>사원명</th>                                        <th>내선번호</th>                                        <th>팀명</th>                                        <th>권한</th>                                        <th>재직상태</th>                                        <th>입사일자</th>                                        <th>퇴사일자</th>                                        <th>비밀번호 오류</th>                                        <th>비밀번호 초기화</th>                                        <th>등록자</th>                                        <th>등록일시</th>                                    </tr>                                    </thead>                                    <tbody>                                    <c:forEach items="${board}" var="board">                                        <tr>                                            <td>${board.bno}</td>                                            <th><a href='#' onclick="openEmpModifyModal(${board.bno})">${board.empId}</a></th>                                            <th>${board.empName}</th>                                            <th>${board.interphone}</th>                                            <th>${board.companyName}</th>                                            <th>${board.athority}</th>                                            <th>${board.isWorking}</th>                                            <th>${board.inDate}</th>                                            <th>${board.outDate}</th>                                            <th>${board.pwdErCnt}</th>                                            <th><img src="/resources/images/icon_r.png"></th>                                            <th>${board.register}</th>                                            <th>${board.regDate}</th>                                        </tr>                                    </c:forEach>                                    </tbody>                                </table>                                <!-- 테이블 끝 -->                                <!-- 페이징 시작-->                                <div id="pwary">                                    <div class="pwar">                                        <div id="pagingNew">                                            <!-- jstl 코어 태그 -->                                            <!-- c:if test="조건 판별식"                                                var="변수명"                                                scope="변수 공유 범위"-->                                            <!-- JSTL c:if 조건문을 통해 이전 링크의 활성/비활성 처리를 함 -->                                            <%--<c:if test="${PageMaker.prev}">--%>                                                <a href="${path}?page=1" class="numPrev_a">                                                    <span class="flaticon2-fast-back" style="font-size: 0.6rem;"></span>                                                </a>                                                <%--TODO: 현재페이지가 1일때 2로 저장하는 코드 짜야돼--%>                                                <c:if test="${pageMaker.startPage eq 1}">                                                    <c:set target="${pageMaker}" property="startPage" value="2" scope="page" var="testStartPage"/>                                                    <script>                                                        console.log("startPage : "+${pageMaker.startPage});                                                    </script>                                                </c:if>                                                <a class="numPrev" href="${path}${pageMaker.makeSearchURI(pageMaker.startPage - 1)}">                                                    <span class="flaticon2-back" style="font-size: 0.6rem;"></span>                                                </a>                                            <%--</c:if>--%>                                            <!-- c:forEach 반복문을 통해 pageMaker 클래스에서 계산된 페이지 번호 출력 -->                                            <c:forEach begin="${pageMaker.startPage}"                                                       end="${pageMaker.endPage}" var="page">                                                <!-- c:out 에서 삼항연산자를 통해 a 태그의 속성을 제어하여 페이지 번호들 중에서                                                    현재 페이지 번호임을 알수 있게 색을 변경한다.-->                                                <a href="${path}${pageMaker.makeSearchURI(page)}" <c:out value="${pageMaker.criteria.page == page ? 'class=sel' : 'class=numBox'}"/>>                                                    ${page}                                                </a>                                            </c:forEach>                                            <!-- JSTL c:if 조건문을 통해 다음 링크의 활성/비활성 처리를 함 -->                                            <%--<c:if test="${pageMaker.next && pageMaker.endPage > 0}">--%>                                                <a href="${path}${pageMaker.makeSearchURI(pageMaker.endPage + 1)}">                                                    <span class="flaticon2-next" style="font-size: 0.6rem;"></span>                                                </a>                                                <a href="#" class="numNext_2"><%--TODO: 전체 페이지의 마지막 번호를 찾아서 넣는 알고리즘을 구현해야함--%>                                                    <span class="flaticon2-fast-next" style="font-size: 0.6rem;"></span>                                                </a>                                            <%--</c:if>--%>                                        </div>                                    </div>                                </div>                                <!-- 페이징 끝 -->                            </div>                        </div>                    </div>                </div>            </div>            <!-- 사원 등록 모달 팝업 시작 -->            <%@include file="../include/modalForm/empRegForm.jsp"%>            <!-- 사원 등록 모달 팝업 끝 -->            <!-- 사원 정보 모달 팝업 시작 -->            <%@include file="../include/modalForm/empModForm.jsp"%>            <!-- 사원 정보 모달 팝업 끝 -->        </div>    </div>    <!--  Content  끝 --></div><!-- page 끝 --><!-- plugin_js.jsp --><%@include file="/WEB-INF/view/include/plugin_js.jsp" %><!-- page script --><script>    //Modal 관련 이벤트 처리    //사원 정보 저장 Modal 처리    $(function () {        $("#registerBtn").click(function () {            $("#empRegModal").modal();        });        //Modal창에서 Submit 이벤트 처리 (저장)        $("#modalSubmit").click(function () {            let reg_data = $("#empRegForm").serialize();            console.log("reg_data : "+reg_data);            //summit 클릭시 이벤트 처리 (사원 저장 버튼)            $.ajax({                url: '/emp_list/write',                type: 'POST',                //contentType : "application/x-www-form-urlencoded; charset=UTF-8",                data: reg_data,                //dataType : "json",                success: function (result) {                    alert("사원 등록 성공");                    $("#empRegModal").modal('toggle'); // .modal('toggle') : modal이 켜져있을때 호출하면 꺼지고, 꺼졌을때 호출하면 켜짐(==스위치)                },                error: function (xhr, status) {                    console.log("error xhr: "+xhr, "error status: "+status);                },                complete: function () {                    location.reload();                }            });        });    });    //사원 정보 읽기 Modal 처리    function openEmpModifyModal(boardNo) {        console.log(boardNo);        $.ajax({            url: '/emp_list/read',            type: 'GET',            //contentType : "application/x-www-form-urlencoded; charset=UTF-8",            data: {boardNo : boardNo},            success: function (result) {                $("#empModifyModal").modal();                setInfoToModal(result);            },            error: function (xhr, status) {                console.log("error xhr: "+xhr, "error status: "+status);            }        });    };    //사원정보 폼에 넣는 함수    function setInfoToModal(empInfo) {        $('#empModId').val(empInfo.empId);        $('#empModName').val(empInfo.empName);        //TODO:수정필요(select 방식)        $('#companyModName').val(empInfo.companyName);        $('#teamModName').val(empInfo.teamName);        $('#interphoneMod').val(empInfo.interphone);        $('#isModWorking').val(empInfo.isWorking);        $('#taskMod').val(empInfo.task);        $('#athorityMod').val(empInfo.athority);        $('#inModDate').val(empInfo.inDate);        $('#outModDate').val(empInfo.outDate);        $('#extraModInfo').val(empInfo.extraInfo);        $('input[name=bno]').val(empInfo.bno); // name 값으로 element 선택    }    //사원 정보 수정 요청 처리    $('#modalModSubmit').click(function () {        let mod_data = $('#empModifyForm').serialize();        console.log("mod_data : "+mod_data);        $.ajax({            url: '/emp_list/modify',            type: 'POST',            data: mod_data,            success: function (result) {                alert("사원 정보 수정 성공");                $("#empModifyModal").modal('toggle'); // .modal('toggle') : modal이 켜져있을때 호출하면 꺼지고, 꺼졌을때 호출하면 켜짐(==스위치)            },            error: function (xhr, status) {                console.log("error xhr: " + xhr, "error status: " + status);            },            complete: function () {                location.reload();            }        });    })    //사원 정보 삭제 요청 처리    $('#modalDeleteSubmit').click(function () {        let boardNo = $('input[name=bno]').val();        console.log("Delete bno: "+boardNo);        $.ajax({            url: '/emp_list/delete',            type: 'POST',            data: {boardNo : boardNo},            success: function () {                alert("사원 정보 삭제 성공");                $("#empModifyModal").modal('toggle');            },            error: function (xhr, status) {                console.log("error xhr: "+xhr, "error status: "+status);            },            complete: function () {                location.reload();            }        });    })    //검색 버튼 클릭시 URI 만드는 메서드    $('#searchBtn').on("click", function () { //TODO: 검색 클릭시 uri 만드는 이벤트 핸들러        self.location =            "/emp_list/search?page= 1"            +"&ftSearchType=" + $('#ftSearchType option:selected').val()            +"&sdSearchType=" + $('#sdSearchType option:selected').val()            +"&keyword=" + encodeURIComponent($('#keywordInput').val());    });</script></body></html>